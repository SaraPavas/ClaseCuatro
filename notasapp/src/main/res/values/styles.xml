        <item name="colorPrimary">@color/cornflowerblue</item>
        <item name="colorPrimaryDark">@color/cornflowerblue</item>
        <item name="colorAccent">@color/cornflowerblue</item>
    </style>
    <style name="textViewStyle" parent="@android:style/TextAppearance.DeviceDefault.Medium">

